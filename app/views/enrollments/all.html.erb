<h5>enrollments/all page</h5>

<div class="container-fluid">
  <div class="col-md-10">
    <div class="row">
      <div class="col-md-11">
        <div class="col-md-1"></div>
        <div class="col-md-2 head">NAME</div>
        <div class="col-md-2 head">STUDENT ID#</div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-offset-4 col-md-9 enroll-stud-schedule">
        <div class="col-md-1 sub-head">PERIOD</div>
        <div class="col-md-2 sub-head">SECTION CODE</div>
        <div class="col-md-5 sub-head">SECTION NAME</div>
      </div>
    </div>
    <% @students.each do |student| %>
    <div class="row pre-scrollable">
      <div class="col-md-11">
        <div class="col-md-1"><%= student_index(student) %></div>
        <div class="col-md-2"><%= student.first_name %> <%= student.last_name %></div>
        <div class="col-md-2"><%= student.id_number %></div>
      </div>
    </div>
      <% student_enrollments(student).each do |enrollment|%>
      <div class="row">
        <div class="col-md-offset-4 col-md-9">
          <div class="col-md-1"><%= enrollment.section.period_id %></div>
          <div class="col-md-2"><%= enrollment.section.code %></div>
          <div class="col-md-5"><%= enrollment.section.name %></div>
        </div>
      </div>

      <% end %>
      <div class="row output"></div>
    <% end %>
  </div>
</div>

<div class="container-fluid">
  <!-- <div class="row"> -->
    <div class="col-md-offset-10 col-md-2">
      <%= link_to 'Download as CSV', enrollments_all_path(format: :csv), class: "btn btn-default btn-sm new-cl-btn" %>
      <%= link_to 'Master List', enrollments_master_path, class: "btn btn-default btn-sm new-cl-btn" %>
    </div>
  <!-- </div> -->
</div>