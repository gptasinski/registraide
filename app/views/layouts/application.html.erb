<!DOCTYPE html>
<html>
<head>
  <title>Registraide</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <nav class="navbar navbar-default navbar-fixed-top">
    <div class="container-fluid">
      <div class="row">
        <% if !current_user %>
          <div class="col-md-4" id="get-in"><%= link_to 'Signup', new_user_path, id: "sign-up" %> | <%= link_to 'Login', login_path, id: "log-in" %></div>
          <div class="col-md-4 text-center"><p class="logo">Registraide</p></div>
        <% else %>
          <div class="col-md-4"><%= link_to 'Courses', courses_path(@courses) %> | <%= link_to 'Back', :back %></div>
          <div class="col-md-4 text-center"><p class="logo">Registraide</p></div>
          <div class="col-md-4 text-right prof-line">
            Signed in as: <a href="/users/<%= current_user.id %>"><%= current_user.first_name %> <%= current_user.last_name %></a> | <%= link_to 'Logout', logout_path %>
          </div>
        <% end %>
      </div>
    </div>
  </nav>
  <% if current_user %>
    <%= render '/shared/classes_by' %>
  <% end %>

<%= yield %>

</body>
</html>
