<div class="container">
  <div class="row">
    <div class="col-md-offset-3 col-md-6">
      <%= form_for :session, class: "form-horizontal" do |form| %>

        <div class="form-group">
          <%= form.label :email, class: "col-md-2 control-label" %>
          <div class="col-md-10">
            <%= form.email_field :email, required: true, class: "col-md-4 form-control" %>
          </div>
        </div>

        <div class="form-group">
          <%= form.label :password, class: "col-md-2 control-label" %>
          <div class="col-md-10">
            <%= form.password_field :password, required: true, class: "col-md-10 form-control" %>
          </div>
        </div>

        <div class="form-group">
          <div class="col-md-offset-2 col-md-10">
            <%= button_to 'Login', login_path, class: "btn btn-default" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>