<div class="container-fluid">
  <div class="col-md-10 box">
    <div class="row">
      <div class="col-md-1 head code-col">CODE</div>
      <div class="col-md-5 head">NAME & DESCRIPTION</div>
      <div class="col-md-1 head">SEATS</div>
      <div class="col-md-1 head">PERIOD</div>
      <div class="col-md-1 head">CLOSED</div>
    </div>

    <% @period.sections.each do |section| %>
    <div class="row output">
      <div class="col-md-1 code-col bold"><%= section.code %></div>
      <div class="col-md-5">
        <div class="bold"><%= section.name %></div>
        <div class="col-md-offset-1"><%= section.description %></div>
      </div>
      <div class="col-md-1"><%= section.seats %></div>
      <div class="col-md-1"><%= section.period_id %></div>
      <div class="col-md-1"><%= section.closed %></div>
      <% if current_user.admin %>
        <div class="col-md-1">
          <%= link_to 'Edit', edit_course_section_path(section.course, section), class: "btn btn-default btn-sm" %>
        </div>
        <div class="col-md-1">
          <%= link_to 'Delete', course_section_path(section.course, section), method: :delete, data: { confirm: "Are you shure you want to delete #{ section.code }?" }, class: "btn btn-default btn-sm" %>
        </div>
      <% else %>
        <div class="col-md-1">
          <% if !current_user.schedule_confirmed %>
          <%= link_to 'Register', new_course_section_enrollment_path(section.course, section), class: "btn btn-default btn-sm" %>
          <% end %>
        </div>
      <% end %>
    </div>
    <% end %>
  </div>
</div>



<h5>periods/show page</h5>