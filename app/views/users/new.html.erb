<h1>the users/new page</h1>

<% if flash[:message] %>
  <%= flash[:message] %>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-md-7">
      <%= form_for @user, class: "form-horizontal" do |form| %>
      <%= render partial: 'form', locals: { form: form } %>
      <div class="form-group">
        <div class="col-md-4">
          <%= form.submit :'Sign Up', class: "btn btn-default" %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>

