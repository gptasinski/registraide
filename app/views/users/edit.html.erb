<h5>users/edit page</h5>

<div class="container">
  <div class="row">
    <div class="col-md-7">
      <%= form_for @user, method: :patch, class: "form-horizontal" do |form| %>
      <%= render partial: 'form', locals: { form: form } %>
      <div class="form-group">
        <div class="col-md-4">
          <%= form.submit :'Edit Profile', class: "btn btn-default" %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>