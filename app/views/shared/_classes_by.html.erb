<div class="col-md-2 classes-by-box">
  <%= link_to 'All Courses', courses_path, class: "btn btn-default btn-sm top-buttons" %>
  <%= link_to 'All Classes', sections_all_path, class: "btn btn-default btn-sm top-buttons" %>
  <%= link_to 'Classes by Department', departments_path, class: "btn btn-default btn-sm top-buttons"%>
  <%= link_to 'Classes by Period', periods_path, class: "btn btn-default btn-sm top-buttons" %>
  <% if @departments || @department %>
    <% department_order.each do |department| %>
      <%= link_to "#{ department.name }", department_path(department), class: "btn btn-default btn-sm top-buttons dept-btns", id: "dept/#{department.id}" %>
    <% end %>
  <% end %>
  <% if @periods %>
    <% @periods.each do |period| %>
      <%= link_to "#{ period.name }", period_path(period), class: "btn btn-default btn-sm period-btns" %>
    <% end %>
  <% end %>
  <% if current_user.admin %>
    <%= link_to 'Add New Course', new_course_path, class: "btn btn-default btn-sm top-buttons" %>
    <%= link_to 'All Students', users_path, class: "btn btn-default btn-sm top-buttons" %>
    <%= link_to 'All Student Enrollments', enrollments_all_path, class: "btn btn-default btn-sm top-buttons" %>
    <%= link_to 'All Course Enrollments', master_courses_path, class: "btn btn-default btn-sm top-buttons" %>
    <%= link_to 'Enrollment Master List', enrollments_master_path, class: "btn btn-default btn-sm top-buttons" %>
  <% end %>
</div>

