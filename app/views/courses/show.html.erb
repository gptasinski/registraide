<div class="container-fluid">
  <div class="col-md-10 box">

    <%= render '/shared/section_headers' %>

    <div class="row pre-scrollable course-box">
      <% course_show_order(@sections).each do |section| %>
        <%= render partial: '/shared/section_output', locals: { section: section } %>
      <% end %>
    </div>
  </div>
</div>

<!-- can this be moved to the side nav? in conditional if @course -->
<% if current_user.admin %>
  <div class="container-fluid">
    <div class="col-md-2">
      <div class="row">
          <%= link_to 'Add a New Section', new_course_section_path(@course), class: "btn btn-default btn-sm new-cl-btn" %>
      </div>
    </div>
  </div>
<% end %>

<% if current_user.admin %>
  <div class="container-fluid">
    <div class="col-md-2"></div>
    <div class="col-md-10 box">
      <h4 class="head">Students enrolled in <%= @course.name %></h4>
      <%= render '/shared/student_data' %>
    </div>
  </div>
<% end %>