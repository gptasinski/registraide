
<% if @course.errors.any? %>
  <ul>
    <% @course.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>


<%= form_for @course, method: method, class: "form-horizontal" do |form| %>

<div class="form-group">
  <%= form.collection_select(:department_id, Department.all, :id, :name) do |b| %>
    <%= b.label(class: "radio-button") { b.radio_button(class: "radio_button") }  %>
  <% end %>
</div>





<div class="form-group">
  <%= form.label :name, class: "col-md-2 control-label text-right" %>
  <div class="col-md-10">
    <%= form.text_field :name, required: true, placeholder: "ART 101", class: "col-md-4 form-control" %>
  </div>
</div>

<div class="form-group">
  <%= form.label :number, class: "col-md-2 control-label text-right" %>
  <div class="col-md-10">
    <%= form.text_field :number, required: true, placeholder: "0101ART", class: "col-md-4 form-control" %>
  </div>
</div>

<div class="form-group">
  <%= form.label :title, class: "col-md-2 control-label text-right" %>
  <div class="col-md-10">
    <%= form.text_field :title, required: true, placeholder: "Beginners Art", class: "col-md-4 form-control" %>
  </div>
</div>

<div class="form-group">
  <%= form.label :description, class: "col-md-2 control-label text-right" %>
  <div class="col-md-10">
    <%= form.text_area :description, required: true, placeholder: "short description of what each class offers", class: "col-md-4 form-control" %>
  </div>
</div>

<div class="form-group">
  <%= form.label :prereq, class: "col-md-2 control-label text-right" %>
  <div class="col-md-10">
    <%= form.text_field :prereq, required: true, placeholder: "ex: 0100ART", class: "col-md-4 form-control" %>
  </div>
</div>

<div class="form-group">
  <div class="col-md-offset-10 col-md-2">
    <%= form.submit submit_message, class: "btn btn-default" %>
  </div>
</div>

<% end %>